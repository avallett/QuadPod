<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path, class: "unibutton" %>
<table align="center">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
  </tr>
 
  <% @articles.sort_by {|article| article.hits}.reverse!.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><% if article.user %>
            <%= article.user.name %>
          <% end %>
      </td>
      <td><%= link_to 'Show', article_path(article), class: "unibutton" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "unibutton" %></td>
      <td><%= link_to 'Destroy',
       article_path(article),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: "unibutton" %>
      </td>
    </tr>
  <% end %>
</table>
